<% if @note.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@note.errors.count, "error") %> prohibited
      this note from being saved:
    </h2>
    <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with model: @note, local: true do |f| %>
	<div class="form-group row">
		<%= f.label :title, class: 'col-sm-2 col-form-label col-form-label-lg' %>
		<div class="col-sm-5">
	  	<%= f.text_field :title, class: 'form-control form-control-lg',placeholder: 'Title'%>
	  </div>
	</div>
	<div class="form-group row">
	  <%= f.label :body, class: 'col-sm-2 col-form-label col-form-label-lg' %>
	  <div class="col-sm-5">
	  	<%= f.text_area :body ,class: 'form-control form-control-lg',placeholder: 'Take your note here',size: "60x12" %>
	  <%= f.submit class: "btn btn-primary btn-lg btn-block"%>

	  </div>
	</div>
<% end %>