<%= form_for :session, html: { class: 'form-signin login-form'},url: session_path do |form| %>
  <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
  <div class="text-field">
    <%= form.label :email, class: 'sr-only' %>
    <%= form.text_field :email, class: 'form-control',placeholder: 'Email',type: 'email', required: true %>
  </div>

  <div class="password-field">
    <%= form.label :password, class: 'sr-only' %>
    <%= form.password_field :password, class: 'form-control', placeholder: 'password', required: true %>
  </div>

  <div class="submit-field">
    <%= form.submit class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <div class="other-links">
    <% if Clearance.configuration.allow_sign_up? %>
      <%= link_to t(".sign_up"), sign_up_path %>
    <% end %>
  </div>
<% end %>